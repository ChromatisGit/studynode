{
  "scripts": {
    "file": "pnpm ts-node -r tsconfig-paths/register",
    "gen:schema": "pnpm ts-node -r tsconfig-paths/register src/dev/export-schema.ts",
    "gen": "pnpm ts-node -r tsconfig-paths/register src/builder/main.ts",
    "gen:ignoreMissing": "node -r ts-node/register -r tsconfig-paths/register -e \"process.env.IGNORE_MISSING_FILES='true'; require('./src/builder/main.ts')\"",
    "dev": "pnpm run gen:ignoreMissing && pnpm --dir website start",
    "start": "pnpm --dir website start",
    "build": "pnpm run gen:ignoreMissing && pnpm --dir website install && pnpm --dir website build",
    "serve": "pnpm --dir website serve"
  },
  "dependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.0.0",
    "yaml": "^2.8.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/node": "^24.10.0",
    "@types/react": "^19.0.4",
    "@types/react-dom": "^19.0.2",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
