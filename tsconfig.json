{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@app/*": [
        "./src/app/*"
      ],
      "@client/*": [
        "./src/client/*"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@features/*": [
        "./src/features/*"
      ],
      "@lib/*": [
        "./src/client/lib/*"
      ],
      "@styles/*": [
        "./src/client/styles/*"
      ],
      "@domain/*": [
        "./src/domain/*"
      ],
      "@auth/*": [
        "./src/server/auth/*"
      ],
      "@builder/*": [
        "./src/server/builder/*"
      ],
      "@data/*": [
        "./src/server/data/*"
      ],
      "@generated/*": [
        "./.generated/*"
      ],
      "@homepage/*": [
        "./src/features/homepage/*"
      ],
      "@coursepage/*": [
        "./src/features/coursepage/*"
      ],
      "@library/*": [
        "./src/features/library/*"
      ],
      "@practise/*": [
        "./src/features/practise/*"
      ],
      "@access/*": [
        "./src/features/access/*"
      ],
      "@worksheet/*": [
        "./src/features/worksheet/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "**/*.mts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
